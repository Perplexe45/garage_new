{% extends "base.html.twig" %}

{% block title %}
	Garage Parrot
{% endblock %}

{% block presentation %}
	<header>
		<div class="">
			<h1 class="display-4 bg-light"><strong>Bienvenue cher client</strong></h1>
		</div>
	</header>

	<section class="bg-light container">
		<div class="bg-light ">
			<div class="py-5">
				<div class="box">
					<h2>Depuis 15 ans, notre garage a su gagner votre confiance et vos sourires.</h2>
					<p>En effet, nous avons des services de qualité, une expertise inégalée et une équipe dévouée
																																	grace à nos techniciens qui font tout pour vous apporter une entière satisfaction.
						<br>Bienvenue chez nous !</p>

					<p style="text-align: center;">
						<span style="font-weight: bold; font-size: 24px;">Mr Parrot Vincent</span>
					</p>
				</div>
			</div>
		</div>


		<div class="container">
			{% for info in infoSpecial %}
				{% if info.id != 0 %}
					<div class="text-center scrolling-text fw-semibold">
						<span class="scrolling-text_content" style="color:dark">{{ info.designation }}</span>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</section>
{% endblock %}


{% block caroussel %}

	<!-- Caroussel -->
	<div class="container bg-light">
		<div class="col-md-7 col-lg-7 m-auto">
			<h2 class="text-center pt-5 pb-3 ">Quelques belles voitures qui sont passées dans notre garage</h2>
			<!-- Carousel -->
			<div
				class="carousel slide" data-bs-ride="carousel" data-interval="1000">

				<!-- The slideshow/carousel -->
				<div class="carousel-inner carousel slide data-bs-ride=carousel">
					<div class="carousel-item active">
						<img src="{{ asset('assets/images/car1.jpg') }}" alt="Premier jardin" class="d-block img-fluid rounded-3 " style="width:100%">
						<div class="carousel-caption pt-1 pb-1 ps-2 pe-2"></div>
					</div>
					<div class="carousel-item">
						<img src="{{ asset('assets/images/car2.jpg') }}" alt="Deuxième jardin" class="d-block img-fluid rounded-3" style="width:100%">
						<div class="carousel-caption pt-1 pb-1 ps-auto pe-auto"></div>
					</div>

					<div class="carousel-item">
						<img src="{{ asset('assets/images/car3.jpg') }}" alt="Troisième jardin" class="d-block img-fluid rounded-3" style="width:100%">
						<div class="carousel-caption pt-1 pb-1 ps-2 pe-2"></div>
					</div>

				</div>

				<!-- Left and right controls/icons -->
				<button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
					<span class="carousel-control-prev-icon"></span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
					<span class="carousel-control-next-icon"></span>
				</button>
			</div>
		</div>
		<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
		<hr>
		<hr>
		<hr>
		<hr class="custom-line"><hr class="custom-line">

	{% endblock %}

	{% block gallery %}
		<section data-bs-version="5.1" class="my-5" id="gallery5-n">
			<div class="container">
				<div class="text-center">
					<h6 class="h4-title align-center display-4 pt-1">
						<strong>Voici les services que nous offrons</strong>
					</h6>
				</div><br>

				<div class="row text-center justify-content-center">
					<div class="col-12 col-md-6 col-lg-3 bg-light rounded border carderBord p-3 me-1">
						<div class="image-container" onclick="showText(this)">
							<img class="w-100 cursor-pointer" src="{{ asset('assets/images/reparation.jpg') }}" alt="">
							<h6 class="mt-2">Réparation</h6>
						</div>
						<div class="my-5">
							<h4 class="pb-2">Liste des réparations</h4>
							<ul class="mx-3">
								{% for service in services %}
									{% if service.id != 1 %}
										<li class="service-item">{{ service.nom }}</li>
										<ul class="evocation-list">
											{% for evocation in service.evocations %}
												<li class="evocation-item">{{ evocation.nom }}</li>
											{% endfor %}
										</ul>
									{% endif %}
								{% endfor %}
							</ul>
							<div class="my-5">
								<h6 class="text-muted small fw-normal">Plus d'infos : survolez la liste des réparations avec la souris</h6>
							</div>
						</div>

					</div>
					<div class="col-12 col-md-6 col-lg-3 rounded border bg-light carderBord p-3 me-1">
						<div class="image-container" onclick="showText(this)">
							<img class="w-100 cursor-pointer" src="{{ asset('assets/images/entretien.png') }}" alt="">
							<h6 class="align-center mt-2 display-7">Entretien courant</h6>
						</div>
						<div class="my-5">
							<h4 class="pb-2">Les entretiens courants</h4>
							<ul>
								{% for service in services %}
									{% for evocation in service.evocations %}
										{% if service.id ==1 %}
											<li class="small-text text-start ps-2">{{ evocation.nom }}</li>
										{% endif %}
									{% endfor %}
								{% endfor %}
							</ul>
						</div>
					</div>

					<div class="col-12 col-md-6 col-lg-3 rounded border bg-light carderBord p-3">
						<div class="image-container" onclick="showText(this)">
							<img class="w-100 cursor-pointer" src="{{ asset('assets/images/venteVehicules.png') }}" alt="">
							<h6 class="align-center mt-2 display-7">Vente véhicules</h6>
						</div>
						<div class="my-5">
							<h4 class="pb-2">Activités des ventes</h4>
							<ul>
								<li class="small-text text-start ps-2">Véhicules toutes marques</li>
								<li class="small-text text-start ps-2">Neufs et occasions</li>
								<li class="small-text text-start ps-2">Propositions de financement</li>
								<li class="small-text text-start ps-2">Reprise de votre ancien véhicule possible</li>
								<li class="small-text text-start ps-2">Garanti : 1 an pour tous types de véhicules</li>
								<li class="small-text text-start ps-2">Essais routiers</li>
							</ul>
						</div>
					</div>

				</div>
			</div>
		</section>
		<hr class="custom-line"><hr class="custom-line">
	{% endblock %}

	{% block venteVehicules %}
		<div class="container">
			<div class="text-center mt-5">
				<h6 class="h4-title align-center display-4 pt-1">
					<strong>Quelques exemples de voitures mises en vente</strong>
				</h6>
			</div><br>
			<section class="my-5">
				<div class="container">
					<div class="row mt-4">
						<div class="col-12 col-md-6 col-lg-4 mb-4">
							<div class="border carderBord">
								<div class="">
									<img class="rounded-top-3 w-98" src="assets/images/R5.png" alt="Renault 5" title="">
								</div>
								<div class="bg-light ps-3 pb-2 ">
									<h5 class="display-5 pt-1">
										<strong>Renault 5</strong>
									</h5>
									<h6 class="mt-1">Caractéristiques&nbsp;</h6>
									<p class="mt-3 pe-2">Superbe Renault 5 des années 80. Entretenu par une personne agée qui en a pris soin pendant toutes ces années</p>
								</div>
							</div>
						</div>
						<div class="сol-12 col-md-6 col-lg-4 mb-4">
							<div class="border carderBord">
								<div class="">
									<img class="rounded-top-3 w-98" src="assets/images/2cv.png" alt="2CV" title="">
								</div>
								<div class="bg-light ps-3 pb-2">
									<h5 class="display-5 pt-1">
										<strong>2 CV</strong>
									</h5>
									<h6 class="mb-2">Caractéristiques</h6>
									<p class="mt-3 pe-2">Une dodoche inusable qui a fait le bonheur de beaucoup, en allant quelque fois faire des pique-nique à la campagne des amoureux de cette voiture.</p>
								</div>
							</div>
						</div>
						<div class="сol-12 col-md-6 col-lg-4 mb-4">
							<div class="border carderBord">
								<div class="">
									<img class="rounded-top-3 w-98" src="assets/images/4l.png" alt="4L" title="">
								</div>
								<div class="bg-light ps-3 pb-2">
									<h5 class="display-5 pt-1">
										<strong>4 L</strong>
									</h5>
									<h6 class="">Caractéristiques&nbsp;</h6>
									<p class="mt-3 pe-2">Une 4L légendaire dont les nostalgiques se souviennent bien, car c'était une voiture très agréable à conduire .<br></p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

		</div>
		<hr class="custom-line"><hr class="custom-line">
	{% endblock %}

	{% block avisClients %}
		<section data-bs-version="5.1" class="my-3">
			<div class="container-fluid">
				<div class="row justify-content-center">
					<div class="title col-12 col-md-9 mt-5">
						<h6 class="h4-title align-center mb-1 display-4 text-center">
							<strong>Commentaires et notes des clients</strong>
						</h6>
						<div class="container my-5">
							<div
								class="row">	
								<!-- Colonnes des avis des clients -->
								<div class="col-md-7">
									<div class="card">
										<div class="rounded-2 characteristic-box pt-4 pb-4">
											<h2 class="text-center bg-light">Avis des clients</h2>
											<div
												class="form-scroll border mt-3">
												<!-- Affichage des témoignages -->
												{% for temoignage in temoignages %}
													{% if temoignage.acceptation == 1 %}
															<div class="card my-3 border border-dark">
																	<div class="m-3">
																			<h5 class="card-title">{{ temoignage.id }}- {{ temoignage.nom }}</h5>
																			<p class="">{{ temoignage.commentaire }}</p>
																			<p class="card-text">
																					{% set stars = '' %}
																						{% for _ in 1..temoignage.note %}
																								{% set stars = stars ~ '<span class="yellowStars">★</span>' %}
																						{% endfor %}
																					{{ stars|raw }}
																			</p>
																	</div>
															</div>
													{% endif %}
											{% endfor %}
											</div>
										</div>
									</div>
								</div>
								<div class="col-md-1"></div>
								<!-- Colonne du formulaire -->
								<div class="col-md-4">
									<div class="" style="width:24rem">
										<div class="characteristic-box">
											<div class="pt-3 pb-4">
												<h2 class="text-center bg-light">Laissez votre témoignage</h2>
											</div>
											<form method="POST" action="{{ path('traitement_temoignage') }}" class="border border-dark rounded-2 p-3">
												<div class="mb-3">
													<label for="nom" class="form-label">Nom :</label>
													<input type="text" class="form-control border border-dark" id="nom" name="nom" required>
												</div>
												<div class="mb-3">
													<label for="commentaire" class="form-label">Commentaire :</label>
													<textarea class="form-control border border-dark" id="commentaire" name="commentaire" required style="height: 142px;"></textarea>
												</div>
												<div class="mb-3">
													<label for="note" class="form-label">Note :</label>
													<div class="col-md-6">
														<select class="yellowStars form-select border border-dark" id="note" name="note" required>
															<option class="yellowStars" value="1">★☆☆☆☆</option>
															<option class="yellowStars" value="2">★★☆☆☆</option>
															<option class="yellowStars" value="3">★★★☆☆</option>
															<option class="yellowStars" value="4">★★★★☆</option>
															<option class="yellowStars" value="5">★★★★★</option>
														</select>
													</div>
												</div>
												<button type="submit" class="btn btn-dark">Soumettre</button>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<hr class="custom-line">
		<hr class="custom-line">
	{% endblock %}

	{% block formulaireClients %}
		<section data-bs-version="5.1" class="p-5">
			<div class="container">
				<div class="row justify-content-center mt-4 ">
					<div class="col-lg-7 mx-auto">
						<div class="card" id="formContact">
							<div class="card-body rounded-2 card-color">
								<div class="mt-4 pt-2">
									<h3 class="text-center pr-5 bg-light">
										<strong>Contactez-nous</strong>
									</h3>
								</div>
								<form method="POST" action="{{ path('contactClients') }}" class="mx-auto" data-form-title="Form Name">
									<input type="hidden" name="email" data-form-email="true" value="">
									<div class="row">
										<div hidden="hidden" data-form-alert="" class="alert alert-success col-12">Merci de nous avoir contacté</div>
										<div hidden="hidden" data-form-alert-danger="" class="alert alert-danger col-12"></div>
									</div>
									<div class="row">
										<h6 style="color:#EAE0D5" class=" mb-4 text-center">
											(Un membre de notre équipe vous recontactera )
										</h6>

										<div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="name">
											<input type="text" name="name" placeholder="Nom" data-form-field="name" class="form-control" value="" id="name-form7-o" required>
										</div>
										<div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="name">
											<input type="text" name="prenom" placeholder="Prénom" data-form-field="prenom" class="form-control" value="" id="prenom-form7-o" required>
										</div>

										<div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="email">
											<input type="email" name="email" placeholder="Adresse Email" data-form-field="email" class="form-control" value="" id="email-form7-o" required>
										</div>
										<div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="phone">
											<input type="tel" name="phone" placeholder="Téléphone" data-form-field="phone" class="form-control" value="" id="phone-form7-o" required>
										</div>
										<div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="phone">
											<input type="message" name="message" placeholder="Message" data-form-field="messahge" class="form-control" value="" id="message-form7-o" required style="height: 100px" ;>
										</div>
										<div class="col-lg-7 mx-auto mbr-section-btn align-center">
											<button type="submit" class="btn btn-dark display-4">Envoyer</button>
										</div>
										<div id="form-message" class="alert alert-success col-12" style="display: none;">Merci de votre contatc. On vous rapelle.</div>

									</div>
								</form>
							</div>
						</div>


					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		document.querySelector('form').addEventListener('submit', function () {
document.getElementById('form-message').style.display = 'block';
});
	</script>

</section>{% endblock %}
